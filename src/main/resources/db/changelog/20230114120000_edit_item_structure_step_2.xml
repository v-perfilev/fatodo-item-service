<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.9.xsd">

    <changeSet id="00000000000006" author="persoff68">

        <addColumn tableName="ftd_item">
            <column afterColumn="reminders_count"
                    name="is_done"
                    type="boolean"
                    defaultValue="false">
                <constraints nullable="false"/>
            </column>
        </addColumn>

        <update tableName="ftd_item">
            <column name="is_done" value="true"/>
            <where>status = 'COMPLETED' or status = 'CLOSED'</where>
        </update>

        <dropColumn tableName="ftd_item" columnName="status"/>

    </changeSet>

</databaseChangeLog>
