<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.9.xsd">

    <changeSet id="00000000000001" author="persoff68">

        <createTable tableName="ftd_item_group">
            <column name="id" type="binary(16)">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="title" type="varchar(256)">
                <constraints nullable="false"/>
            </column>

            <column name="color" type="varchar(16)">
                <constraints nullable="false"/>
            </column>

            <column name="image_filename" type="varchar(128)"/>

            <column name="is_deleted" type="boolean">
                <constraints nullable="false"/>
            </column>

            <column name="created_by" type="binary(16)"/>
            <column name="created_at" type="timestamp"/>
            <column name="last_modified_by" type="binary(16)"/>
            <column name="last_modified_at" type="timestamp"/>
        </createTable>

    </changeSet>

</databaseChangeLog>
